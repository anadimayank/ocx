{
  "name": "openshift-ai-assistant",
  "displayName": "OpenShift AI Assistant",
  "description": "AI-powered assistant for Red Hat OpenShift with GitHub Copilot Chat integration",
  "version": "2.0.0",
  "publisher": "your-publisher-name",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "AI",
    "Chat Participants",
    "Other"
  ],
  "keywords": [
    "openshift",
    "kubernetes",
    "redhat",
    "copilot",
    "ai",
    "chat"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "chatParticipants": [
      {
        "id": "openshift-ai-assistant.ocX",
        "name": "ocX",
        "description": "OpenShift AI Assistant - Get help with OpenShift, Kubernetes, and Red Hat technologies",
        "isSticky": true,
        "commands": [
          {
            "name": "troubleshoot",
            "description": "Debug OpenShift issues and errors"
          },
          {
            "name": "docs",
            "description": "Get OpenShift documentation and API references"
          },
          {
            "name": "search",
            "description": "Search Stack Overflow for community solutions"
          },
          {
            "name": "explain",
            "description": "Explain selected OpenShift YAML or code"
          },
          {
            "name": "best-practices",
            "description": "Get OpenShift best practices and recommendations"
          }
        ]
      }
    ],
    "commands": [
      {
        "command": "openshift-ai-assistant.askQuestion",
        "title": "Ask OpenShift Question",
        "category": "OpenShift AI"
      }
    ],
    "keybindings": [
      {
        "command": "openshift-ai-assistant.askQuestion",
        "key": "ctrl+shift+o",
        "mac": "cmd+shift+o"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4",
    "@vscode/test-electron": "^2.2.0",
    "@vscode/vsce": "^2.19.0"
  },
  "dependencies": {
    "ws": "^8.13.0",
    "axios": "^1.4.0"
  }
}