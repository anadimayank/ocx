{
  "name": "ocx-ai-assistant",
  "displayName": "ocX AI Assistant",
  "description": "Your universal AI assistant for technical documentation and code, integrated with Copilot Chat.",
  "version": "3.0.0",
  "publisher": "your-publisher-name",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "AI",
    "Chat",
    "Education"
  ],
  "keywords": [
    "documentation",
    "ai",
    "copilot",
    "chat",
    "devops",
    "kubernetes",
    "openshift"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "chatParticipants": [
      {
        "id": "ocx-ai-assistant.ocX",
        "name": "ocX",
        "description": "Get expert help with documentation, code explanations, and more.",
        "isSticky": true,
        "commands": [
          {
            "name": "docs",
            "description": "Fetch documentation for any technology (e.g., /docs nodejs http module)"
          },
          {
            "name": "search",
            "description": "Search Stack Overflow for community answers"
          },
          {
            "name": "explain",
            "description": "Explain the selected code snippet"
          }
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4",
    "@vscode/test-electron": "^2.2.0",
    "@vscode/vsce": "^2.19.0"
  },
  "dependencies": {
    "ws": "^8.13.0"
  }
}
